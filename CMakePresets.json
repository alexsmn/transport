{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_MODULE_PATH": "${sourceDir}/cmake"
      }
    },
    {
      "name": "vcpkg-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64",
      "inherits": "vcpkg-base",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-x86",
      "displayName": "Windows x86",
      "inherits": "vcpkg-base",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      }
    },
    {
      "name": "linux-x64",
      "displayName": "Linux x64",
      "inherits": "vcpkg-base",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "windows-x64-clang-tidy",
      "displayName": "Windows x64 with clang-tidy",
      "inherits": "vcpkg-base",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_CLANG_TIDY": "$env{VCToolsInstallDir}/bin/HostX64/x64/clang-tidy.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-x64-clang-tidy",
      "displayName": "Linux x64 with clang-tidy",
      "inherits": "linux-x64",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64",
      "configurePreset": "windows-x64",
      "configuration": "Release"
    },
    {
      "name": "windows-x86",
      "configurePreset": "windows-x86",
      "configuration": "Release"
    },
    {
      "name": "linux-x64",
      "configurePreset": "linux-x64",
      "configuration": "Release"
    },
    {
      "name": "windows-x64-clang-tidy",
      "configurePreset": "windows-x64-clang-tidy",
      "configuration": "Release"
    },
    {
      "name": "linux-x64-clang-tidy",
      "configurePreset": "linux-x64-clang-tidy",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-x64",
      "configurePreset": "windows-x64",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-x86",
      "configurePreset": "windows-x86",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-x64",
      "configurePreset": "linux-x64",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
